@model RegisterRequest

@{
  ViewData["title"] = "Register";
}

<main class="fade">
  @using (Html.BeginForm("Register", "Auth", FormMethod.Post))
  {
  <header></header>
  <section class="space-y-3">
    <div class="field-wrapper space-x-3">
      <div class="field">
        @Html.TextBoxFor(m => m.FirstName, new { @placeholder = "First Name" })
        <div class="icon ph-user">
          <div class="tooltip">@Html.ValidationMessageFor(m => m.FirstName)</div>
        </div>
      </div>
      <div class="field">
        @Html.TextBoxFor(m => m.LastName, new { @placeholder = "Last Name" })
        <div class="icon ph-user">
          <div class="tooltip">@Html.ValidationMessageFor(m => m.LastName)</div>
        </div>
      </div>
    </div>
    <div class="field-wrapper">
      <div class="field">
        @Html.TextBoxFor(m => m.Birthday, new 
        { 
          @placeholder = "Birthday", 
          @type = "date"
        })
        <div class="icon ph-calendar">
          <div class="tooltip">@Html.ValidationMessageFor(m => m.Birthday)</div>
        </div>
      </div>
    </div>
    <div class="field-wrapper">
      <div class="field">
        @Html.TextBoxFor(m => m.Email, new { @placeholder = "Email / Username", @type = "email" })
        <div class="icon ph-envelope-simple">
          <div class="tooltip">@Html.ValidationMessageFor(m => m.Email)</div>
        </div>
      </div>
    </div>
    <div class="field-wrapper">
      <div class="field">
        @Html.PasswordFor(m => m.Password, new { @placeholder = "Password" })
        <div class="icon ph-lock">
          <div class="tooltip">@Html.ValidationMessageFor(m => m.Password)</div>
        </div>
      </div>
    </div>
  </section>
  <footer>
    <button type="submit" class="button">Register</button>
    <p>Already have an account? @Html.ActionLink("Login", "Login", "Auth")</p>
  </footer>
  }
</main>

@section Styles {
<link rel="stylesheet" href="~/css/authentication.css" />
}

@section Scripts {
<script src="~/js/authentication.js" type="module"></script>
}
